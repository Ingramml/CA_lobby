# Environment Configuration for CA Lobby Web API

# Flask Configuration
FLASK_ENV=development
PORT=5000
DEBUG=True

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
SECRET_KEY=your-flask-secret-key-change-in-production

# Database Configuration
CREDENTIALS_LOCATION=/path/to/your/google-cloud-credentials.json
PROJECT_ID=your-google-cloud-project-id

# BigQuery Configuration
BIGQUERY_DATASET=ca_lobby
BIGQUERY_TABLE_PREFIX=

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Export Limits
MAX_EXPORT_SIZE_MB=50
EXPORT_RETENTION_DAYS=7