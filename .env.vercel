# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_BIGQUERY=1800
CACHE_TTL_AUTH=7200

# External Services
WEBHOOK_SECRET=your-webhook-secret-for-external-integrations

