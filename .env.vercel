# ======================================================
# CA LOBBY NEXT.JS - VERCEL DEPLOYMENT ENVIRONMENT
# ======================================================
# Copy these variables to Vercel Dashboard > Project Settings > Environment Variables
# Or upload this file directly to Vercel

# ======================================================
# PUBLIC ENVIRONMENT VARIABLES (client-side accessible)
# ======================================================

# Application Configuration
# NEXT_PUBLIC_APP_URL=https://your-project-name.vercel.app  # Add this AFTER deployment with actual Vercel URL
NEXT_PUBLIC_APP_NAME=CA Lobby Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0

# Demo Mode Configuration (for mock data deployment)
NEXT_PUBLIC_MOCK_DATA_MODE=true
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_USE_REAL_BIGQUERY=false

# Clerk Authentication (Public Keys) - Use demo/test keys for initial deployment
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_demo_key_replace_with_real_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_OUT_URL=/

# Feature Flags (Public)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SPEED_INSIGHTS=true

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_analytics_id

