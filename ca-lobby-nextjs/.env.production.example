# CA Lobby Next.js - Production Environment Configuration

# ======================================================
# PUBLIC ENVIRONMENT VARIABLES (client-side accessible)
# ======================================================

# Application Configuration
NEXT_PUBLIC_APP_URL=https://ca-lobby.vercel.app
NEXT_PUBLIC_APP_NAME="CA Lobby Dashboard"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Clerk Authentication (Public Keys)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_OUT_URL=/

# Feature Flags (Public)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SPEED_INSIGHTS=true

# =====================================================
# PRIVATE ENVIRONMENT VARIABLES (server-side only)
# =====================================================

# Node.js Configuration
NODE_ENV=production
PORT=3000

# Clerk Authentication (Private Keys)
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key_here
CLERK_JWT_KEY=your_clerk_jwt_key_here

# Google Cloud Platform Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"your-project","private_key_id":"key-id","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"service-account@project.iam.gserviceaccount.com","client_id":"client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/service-account%40project.iam.gserviceaccount.com"}'

# BigQuery Configuration
BIGQUERY_DATASET=ca_lobby_data
BIGQUERY_TABLE_PREFIX=prod_
BIGQUERY_LOCATION=US
BIGQUERY_MAX_RESULTS=10000

# Vercel KV (Redis) Configuration
KV_REST_API_URL=https://your-kv-store.vercel-storage.com
KV_REST_API_TOKEN=your_kv_rest_api_token_here
KV_URL=rediss://your-kv-connection-string

# Vercel Edge Config
EDGE_CONFIG=https://edge-config.vercel.com/your-config-id
EDGE_CONFIG_ID=your_edge_config_id

# Database Configuration (if using additional databases)
DATABASE_URL=postgresql://username:password@localhost:5432/ca_lobby_production
REDIS_URL=redis://localhost:6379

# Monitoring and Observability
VERCEL_URL=auto-set-by-vercel
VERCEL_ENV=production
VERCEL_REGION=auto-set-by-vercel

# Security Configuration
NEXTAUTH_SECRET=your-super-secret-jwt-signing-key-here
NEXTAUTH_URL=https://ca-lobby.vercel.app
ENCRYPTION_KEY=your-32-character-encryption-key-here

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_BIGQUERY=1800
CACHE_TTL_AUTH=7200

# External Services
WEBHOOK_SECRET=your-webhook-secret-for-external-integrations

# Error Tracking (Optional - if using Sentry, etc.)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=ca-lobby-nextjs

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
LOG_LEVEL=info

# Feature Flags (Server-side)
ENABLE_BIGQUERY_CACHING=true
ENABLE_EDGE_CONFIG=true
ENABLE_HEALTH_CHECKS=true
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# Background Jobs and Cron
CRON_DATA_SYNC_ENABLED=true
CRON_DATA_SYNC_SCHEDULE="0 2 * * *"
CRON_CACHE_CLEANUP_SCHEDULE="0 4 * * *"

# Content Security Policy
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# CORS Configuration
CORS_ORIGIN=https://ca-lobby.vercel.app,https://ca-lobby-preview.vercel.app

# ======================================================
# VERCEL-SPECIFIC CONFIGURATION
# ======================================================

# These are automatically set by Vercel but can be overridden
VERCEL_GIT_COMMIT_REF=main
VERCEL_GIT_COMMIT_SHA=auto-set-by-vercel
VERCEL_GIT_PROVIDER=github
VERCEL_GIT_REPO_OWNER=your-github-username
VERCEL_GIT_REPO_SLUG=CA_lobby-1

# Build Configuration
BUILD_TIMEOUT=300
FUNCTION_TIMEOUT=30

# Edge Function Configuration
EDGE_FUNCTION_REGION=iad1,sfo1

# Analytics Configuration
ANALYTICS_ID=your-analytics-id-if-using-custom-analytics

# ======================================================
# DEVELOPMENT OVERRIDES (commented out for production)
# ======================================================

# Uncomment these for development/staging environments:
# NEXT_PUBLIC_APP_URL=https://ca-lobby-preview.vercel.app
# NODE_ENV=development
# LOG_LEVEL=debug
# CACHE_TTL_DEFAULT=60
# ENABLE_BIGQUERY_CACHING=false